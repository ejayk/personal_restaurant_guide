                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold"/>

                            <TextView
                                android:layout_below="@id/descriptionTxtView"
                                android:id="@+id/ratingTxtView"
                                android:layout_width="220dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"/>
                                -->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editEntry"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|fill_horizontal|center_vertical"
                android:layout_weight="2"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:text="edit"
                card_view:backgroundTint="@color/button_colour"
                card_view:icon="@android:drawable/ic_menu_edit"
                card_view:iconGravity="end" />

            <Button
                android:id="@+id/deleteEntry"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|fill_horizontal|center_vertical"
                android:layout_weight="2"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:insetRight="3dp"
                android:text="Del"
                card_view:backgroundTint="@color/button_colour"
                card_view:icon="@android:drawable/ic_menu_delete"
                card_view:iconGravity="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>